{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "react": ["./node_modules/@types/react"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
, "src/payload/collections/Orders/hooks/initiateMpesaPayment.js", "src/payload/utilities/generateEmailContent.jsx", "src/payload/utilities/sendemail.jsx", "src/payload/collections/Orders/hooks/sendOrderEmails.js", "src/app/CoreUi_components/couresel.jsx"  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "transpileOnly": true,
    "swc": true,
    "require": ["tsconfig-paths/register"]
  }
}
